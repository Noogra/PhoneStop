<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/poster_vertical_margin"
        android:layout_marginHorizontal="@dimen/poster_vertical_margin"
        android:elevation="@dimen/poster_elevation"
        app:cardCornerRadius="@dimen/poster_corner_radius"
        app:cardElevation="@dimen/poster_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">





            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/poster_vertical_margin"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_id"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="210dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="@dimen/poster_vertical_margin"
                    android:elevation="@dimen/poster_elevation"
                    app:cardCornerRadius="@dimen/poster_corner_radius"
                    app:cardElevation="@dimen/poster_elevation">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/product_img_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/iphone15pro"/>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/cart_BTN1"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Add to Cart"
                    android:layout_marginStart="@dimen/poster_vertical_margin"/>

            </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="parent">

                <TextView
                    android:id="@+id/product_name_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iPhone 15 Pro asdasd"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/product_name_txt_size"
                    android:layout_marginHorizontal="@dimen/poster_vertical_margin"
                    android:layout_marginTop="@dimen/product_description_vertical_margin"/>

                    <TextView
                        android:id="@+id/product_description_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Product Description:\niPhone 15 Pro 256GB White Titanium"
                        android:layout_marginHorizontal="@dimen/poster_vertical_margin"
                        android:layout_marginTop="@dimen/product_description_vertical_margin"/>

                    <TextView
                        android:id="@+id/product_price_text_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1199.99$"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="@dimen/poster_vertical_margin"
                        android:layout_marginTop="5dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>